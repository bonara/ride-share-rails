<h1>Trip#<%= @trip.id %> </h1>

<table >
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Delete</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
  
    <tr>
      <td><%= link_to @trip.id, passenger_trip_path(@trip.passenger.id, @trip.id) %></td>
      <td><%= @trip.date %></td>
      <td><%= link_to @trip.driver.name, driver_path(@trip.driver.id)  %></td>
      <td><%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %></td>
      <td><%= @trip.cost %></td>
      <td><%= @trip.rating %></td>
      <td><%= link_to "Delete", trip_path(@trip.id)%></td>
      <td><%= link_to "Edit", edit_passenger_trip_path(@trip.passenger.id, @trip.id)%></td> 
    </tr>
  </tbody>
</table>