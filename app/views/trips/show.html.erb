<h1>Trip#<%= @trip.id %> </h1>

<table class="table table-striped">
  <thead class="thead">
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Driver</th>
      <th>Passenger</th>
      <th>Price</th>
      <th>Rating</th>
      <th>Delete</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
  
    <tr>
      <td ><%= link_to @trip.id, trip_path(@trip.id) %></td>
      <td><%= @trip.date %></td>
      <td><%= link_to @trip.driver.name, driver_path(@trip.driver.id)  %></td>
      <td><%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %></td>
      <td><%= sprintf("%.2f",@trip.cost/100) %></td>
      <td><%= @trip.rating %></td>
      <td><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Confirm deletion?" }%></td>
      <td><%= link_to "Edit", edit_trip_path(@trip.id)%></td> 
    </tr>
  </tbody>
</table>