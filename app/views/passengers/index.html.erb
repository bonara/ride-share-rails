<h1>Neber Passengers</h1>


<article class="passengers-list">
  <table>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
    <% @passengers.each do |passenger|%>
      <tr>
        <td><%= link_to passenger.name, passenger_path(passenger) %></td>
        <td><%= link_to "Edit", edit_passenger_path(passenger) %></td>
        <td><%= link_to "Delete", passenger_path(passenger), method: :delete, data: { confirm: "Confirm deletion?" } %></td>
      </tr>
    <% end %>
  </table>
</article>  