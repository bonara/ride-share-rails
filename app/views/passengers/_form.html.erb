<%= form_with model:@passenger, class: 'passenger-form' do |f| %>

<div>
  <%= f.label :name, "Passenger name:"%>
  <%= f.text_field :name, placeholder: "Jane Doe"%>
</div>

<div>
  <%= f.label :phone_num, "Phone number:" %>
  <%= f.text_field :phone_num, placeholder: "234-555-5555"%>
</div>

<%= f.submit button_text%>

<% end %>