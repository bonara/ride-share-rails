<h1>Neber Rideshare</h1>

<h3>Neber Drivers</h3>

<article class="drivers-list">
  <table>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
    <% @drivers.each do |driver|%>
      <tr>
        <td><%= link_to driver.name, driver_path(driver) %></td>
        <td><%= link_to "Edit", edit_driver_path(driver) %></td>
        <td><%= link_to "Delete", driver_path(driver), method: :delete, data: { confirm: "Confirm deletion?" } %></td>
      </tr>
    <% end %>
  </table>
</article>  
